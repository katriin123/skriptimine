#!/bin/bash
#
#kolmnurk
#
#read
#
#ülemine pool
for((r=1; r<4; r++))
do
	#veerud - tärnid
	#tärnive arv algab 1-st
	#igal real ei tohi tärnide arv ületada rea numbrit
	for ((t=1; t<$(($r+1)); t++))
	do
	echo -n "* "
	done
	echo #reavahetus 
done
 #alumine pool
for((r=4; r>0; r--))
do
	for((t=1; t<$(($r+1)); t++))
	do
	echo -n "* "
	done
	echo #reavahetus
done
